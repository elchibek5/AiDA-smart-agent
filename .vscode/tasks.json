{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile (extension)",
      "type": "npm",
      "script": "compile",
      "options": { "cwd": "${workspaceFolder:extension}" },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "watch (extension)",
      "type": "npm",
      "script": "watch",
      "options": { "cwd": "${workspaceFolder:extension}" },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}
